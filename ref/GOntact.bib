  pmcid = {PMC7822813},
  pmid = {33483495},
  keywords = {Animals,Cell Nucleus,Cells; Cultured,Chromatin,Chromosome Mapping,Computational Biology,Erythroid Cells,Gene Expression Regulation,Genome-Wide Association Study,Genome; Human,Genomics,Humans,Mice; Inbred C57BL,Mice; Inbred CBA,Regulatory Sequences; Nucleic Acid},
