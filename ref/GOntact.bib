@article{golov_modified_2020,
  title = {A Modified Protocol of {{Capture-C}} Allows Affordable and Flexible High-Resolution Promoter Interactome Analysis},
  author = {Golov, Arkadiy K. and Abashkin, Dmitrii A. and Kondratyev, Nikolay V. and Razin, Sergey V. and Gavrilov, Alexey A. and Golimbet, Vera E.},
